<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_cast_item_layout"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/cardview_light_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_cast_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/iv_cast_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_cast_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv_cast_image"
            android:layout_marginTop="5dp"
            android:text="Ryan Gosling"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#4A4A4A"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_cast_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cast_name"
            android:text="Officer K"
            android:textColor="#4A4A4A" />

</RelativeLayout>