<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF"
    android:padding="20dp">

    <ImageView
        android:id="@+id/register_arrow_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="back"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="#4A4A4A" />

    <TextView
        android:id="@+id/register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="Create an Account"
        android:textColor="#4A4A4A"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/register_general"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="43dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="General"
        android:textColor="#4A4A4A"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_title" />

    <EditText
        android:id="@+id/register_fullname"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:autofillHints="@android:string/autofill"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="12dp"
        android:drawableTint="#A4A4A4"
        android:hint="fullname"
        android:inputType="text"
        android:minHeight="45dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="18dp"
        android:textColor="#000"
        android:textColorHint="#A4A4A4"
        android:textSize="15sp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_general" />

    <EditText
        android:id="@+id/register_nickname"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:autofillHints="@android:string/autofill"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="12dp"
        android:drawableTint="#A4A4A4"
        android:hint="nickname"
        android:inputType="text"
        android:minHeight="45dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="18dp"
        android:textColor="#000"
        android:textColorHint="#A4A4A4"
        android:textSize="15sp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_fullname" />

    <TextView
        android:id="@+id/register_security"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="Security"
        android:textColor="#4A4A4A"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_nickname" />

    <EditText
        android:id="@+id/register_username"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:autofillHints="@android:string/autofill"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_et"
        android:drawablePadding="12dp"
        android:drawableTint="#A4A4A4"
        android:hint="username"
        android:inputType="text"
        android:minHeight="45dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="18dp"
        android:textColor="#000"
        android:textColorHint="#A4A4A4"
        android:textSize="15sp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_security" />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:autofillHints="@android:string/autofill"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="12dp"
        android:drawableTint="#A4A4A4"
        android:hint="password"
        android:inputType="textPassword"
        android:minHeight="45dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="18dp"
        android:textColor="#000"
        android:textColorHint="#A4A4A4"
        android:textSize="15sp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_username" />

    <EditText
        android:id="@+id/register_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:autofillHints="@android:string/autofill"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="12dp"
        android:drawableTint="#A4A4A4"
        android:hint="confirm password"
        android:inputType="textPassword"
        android:minHeight="45dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="18dp"
        android:textColor="#000"
        android:textColorHint="#A4A4A4"
        android:textSize="15sp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_password" />

    <Button
        android:id="@+id/register_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:backgroundTint="#2455EF"
        android:fontFamily="@font/montserrat_bold"
        android:text="Sign Up"
        android:padding="13dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/register_confirm_password" />


</androidx.constraintlayout.widget.ConstraintLayout>