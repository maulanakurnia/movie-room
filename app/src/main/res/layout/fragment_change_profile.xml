<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:padding="20dp">

    <ImageView
        android:id="@+id/change_profile_arrow_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="back"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="#4A4A4A" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Profile"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#000"
        app:layout_constraintStart_toEndOf="@id/change_profile_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/change_profile_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/change_profile_fullname"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:autofillHints="@android:string/autofill"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="12dp"
        android:drawableTint="#A4A4A4"
        android:hint="fullname"
        android:inputType="text"
        android:minHeight="45dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="18dp"
        android:textColor="#000"
        android:textColorHint="#A4A4A4"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_profile_arrow_back" />

    <EditText
        android:id="@+id/change_profile_nickname"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:autofillHints="@android:string/autofill"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="12dp"
        android:drawableTint="#A4A4A4"
        android:hint="nickname"
        android:inputType="text"
        android:minHeight="45dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="18dp"
        android:textColor="#000"
        android:textColorHint="#A4A4A4"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_profile_fullname" />

    <EditText
        android:id="@+id/change_profile_username"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:autofillHints="@android:string/autofill"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_et"
        android:drawablePadding="12dp"
        android:drawableTint="#A4A4A4"
        android:hint="username"
        android:inputType="text"
        android:minHeight="45dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="18dp"
        android:textColor="#000"
        android:textColorHint="#A4A4A4"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_profile_nickname" />

</androidx.constraintlayout.widget.ConstraintLayout>